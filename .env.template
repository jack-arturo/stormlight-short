# ===============================================
# Stormlight Archives Short Film Project
# Environment Variables Template
# ===============================================
#
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control
#
# Usage:
#   1. cp .env.template .env
#   2. Edit .env with your actual values
#   3. Source the environment: source .env (or use python-dotenv)

# ===============================================
# Google Cloud Platform Configuration
# ===============================================

# Your GCP Project ID (required for all GCP services)
# Example: my-stormlight-project-123456
GCP_PROJECT_ID=your-project-id

# Google Cloud Storage bucket name for project assets
# This should match the bucket name in pipeline_config.yaml
# Example: stormlight-short-assets
GCS_BUCKET=stormlight-short

# GCP region/location for resources
# Common options: us-central1, us-east1, europe-west1
GCP_LOCATION=us-central1

# Google Cloud credentials (optional - uses ADC by default)
# If you need to use a service account key file:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ===============================================
# Vertex AI Configuration
# ===============================================

# Default Vertex AI model for video generation
VERTEX_DEFAULT_MODEL=veo-3-preview

# Fallback model if primary model is unavailable
VERTEX_FALLBACK_MODEL=veo-3-ga

# Default video generation settings
VERTEX_DEFAULT_DURATION=5
VERTEX_DEFAULT_RESOLUTION=1280x720
VERTEX_DEFAULT_ASPECT_RATIO=16:9

# Vertex AI endpoint region (usually same as GCP_LOCATION)
VERTEX_ENDPOINT_REGION=us-central1

# ===============================================
# Project Structure Configuration
# ===============================================

# Base directory for the project (usually current directory)
PROJECT_ROOT=.

# Google Drive or local directory for sync operations
# This should be the full path to your project directory
# Example: /Users/username/Google Drive/stormlight_short
LOCAL_PROJECT_PATH=/path/to/your/stormlight_short

# Directory for sync logs (relative to project root)
SYNC_LOG_DIR=00_docs/sync_logs

# ===============================================
# API Keys and External Services
# ===============================================

# Midjourney API credentials (if using programmatic access)
# MIDJOURNEY_API_KEY=your-midjourney-api-key
# MIDJOURNEY_SERVER_ID=your-discord-server-id
# MIDJOURNEY_CHANNEL_ID=your-discord-channel-id

# OpenAI API key (if using GPT for prompt generation)
# OPENAI_API_KEY=your-openai-api-key

# Any other external service API keys
# STABILITY_AI_API_KEY=your-stability-ai-key
# REPLICATE_API_TOKEN=your-replicate-token

# ===============================================
# Development and Testing Configuration
# ===============================================

# Environment type (development, staging, production)
ENVIRONMENT=development

# Enable debug mode for detailed logging
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum cost threshold in USD (for safety warnings)
COST_WARNING_THRESHOLD=10.0

# Enable dry run mode by default for destructive operations
DEFAULT_DRY_RUN=true

# ===============================================
# Video Processing Configuration
# ===============================================

# Default video quality preset
VIDEO_QUALITY_PRESET=high

# Supported video formats (comma-separated)
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi

# Maximum video file size in MB
MAX_VIDEO_FILE_SIZE=500

# Frame rate for video processing
DEFAULT_FRAME_RATE=24

# ===============================================
# Audio Configuration
# ===============================================

# Default audio format
AUDIO_FORMAT=wav

# Audio sample rate
AUDIO_SAMPLE_RATE=44100

# Audio bit depth
AUDIO_BIT_DEPTH=16

# ===============================================
# Automation and Scheduling
# ===============================================

# Sync interval in hours for automated syncing
AUTO_SYNC_INTERVAL=1

# Backup retention period in days
BACKUP_RETENTION_DAYS=30

# Log retention period in days
LOG_RETENTION_DAYS=90

# Maximum concurrent operations
MAX_CONCURRENT_OPERATIONS=3

# ===============================================
# Security and Safety Configuration
# ===============================================

# Require confirmation for potentially destructive operations
REQUIRE_CONFIRMATION=true

# Automatically backup before destructive operations
AUTO_BACKUP_BEFORE_DESTRUCTIVE_OPS=true

# Enable content safety checks
CONTENT_SAFETY_ENABLED=true

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Timeout for API calls in seconds
API_TIMEOUT=300

# ===============================================
# Development Tools Configuration
# ===============================================

# Python virtual environment path (if using venv)
# VIRTUAL_ENV=/path/to/your/venv

# Node.js version (if using Node.js tools)
# NODE_VERSION=18

# Enable development mode features
DEV_MODE=false

# Hot reload for development
HOT_RELOAD=false

# ===============================================
# Notification Configuration
# ===============================================

# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email for notifications (optional)
# NOTIFICATION_EMAIL=your-email@example.com

# Discord webhook for notifications (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ===============================================
# Performance and Monitoring
# ===============================================

# Enable performance monitoring
PERFORMANCE_MONITORING=false

# Metrics collection endpoint (optional)
# METRICS_ENDPOINT=https://your-metrics-service.com/api

# Enable profiling for development
ENABLE_PROFILING=false

# Memory limit for operations in MB
MEMORY_LIMIT=2048

# ===============================================
# File Processing Configuration
# ===============================================

# Temporary directory for file processing
TEMP_DIR=/tmp/stormlight_short

# Maximum file size for uploads in MB
MAX_UPLOAD_SIZE=100

# Supported image formats
SUPPORTED_IMAGE_FORMATS=png,jpg,jpeg,webp

# Image quality for processed images (1-100)
IMAGE_QUALITY=85

# ===============================================
# Advanced Configuration
# ===============================================

# Custom user agent for HTTP requests
USER_AGENT="StormLight-Short-Film-Pipeline/1.0"

# Request timeout in seconds
REQUEST_TIMEOUT=60

# Enable caching for API responses
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false